<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    tools:context=".Set_Bua_Time">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#030303"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bus_image"
            android:layout_width="308dp"
            android:layout_height="299dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_icons8_add_image_96" />

        <Button
            android:id="@+id/Upload_bus_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_backgrawond"
            android:padding="5dp"
            android:text="Set_Bus_Time"
            android:textColor="#F4F0F2"
            android:textColorHint="#EEE8E8" />
    </LinearLayout>
</LinearLayout>